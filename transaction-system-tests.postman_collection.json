											"        header: {",
											"            'Authorization': 'Bearer ' + pm.collectionVariables.get(\"adminToken\")",
											"        }",
											"    }, function (err, response) {",
											"        pm.test(\"Account 2 final balance is 90\", function () {",
											"            const account = response.json();",
											"            pm.expect(account.balance).to.equal('90.00');",
											"        });",
											"    });",
											"",
											"    // Check account 789",
