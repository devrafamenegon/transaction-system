# Application
PORT=3000
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,Accept
CORS_EXPOSED_HEADERS=Content-Range,X-Content-Range
CORS_CREDENTIALS=true
CORS_MAX_AGE=3600

# Database
DATABASE_TYPE=postgres
DATABASE_HOST=localhost
DATABASE_PORT=5433
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=bank_db_test

# Redis
REDIS_HOST=localhost
REDIS_PORT=6380

# JWT Configuration
JWT_SECRET=your-super-secret-key-change-in-production
JWT_EXPIRATION=1h

# Encryption
ENCRYPTION_KEY=your-encryption-key-32-chars-here

# API Configuration
API_PREFIX=api
RATE_LIMIT_WINDOW=10000
RATE_LIMIT_MAX=60

# Transaction Configuration
TRANSACTION_MAX_RETRIES=5
TRANSACTION_INITIAL_RETRY_DELAY=50

# Queue Configuration 
QUEUE_JOB_ATTEMPTS=3
QUEUE_BACKOFF_DELAY=1000
QUEUE_REMOVE_ON_COMPLETE=true
QUEUE_REMOVE_ON_FAIL=false

# Logging
LOG_LEVEL=debug